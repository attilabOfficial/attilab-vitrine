<?xml version='1.0' encoding='utf-8'?>
<widget id="com.keosu.attilabrc" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Attilab Remote Control</name>
    <description>
        Attilab Remote Control for the connected showcase
    </description>
    <author email="contact@attilab.io" href="http://attilab.io">
        Attilab
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.1" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#1b1c1d" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="Fullscreen" value="true" />
    <preference name="BackgroundColor" value="0xff1b1c1d"/>
</widget>
